<!DOCTYPE html>
<html lang="en">
<%-include('head') %>

    <body>
        <%-include('nav')%>
        <% if (locals.blog) { %>
            <div class="container">
                <h1><%=blog.title%></h1>
                <img src="<%=blog.CoverImageURL%>" width="300px" height="300px">
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3 mt-3">
                      <input
                        type="text"
                        name="comment"
                        class="form-control"
                        placeholder="Enter your comment"
                      />
                      <button class="btn btn-sm btn-primary" type="submit">Add</button>
                    </div>
                </form>
                                

        <% } %>
        <% if (locals.comment) { %>
            <div class="container">
                <% comment.forEach(comment => { %>
                    <div class="content">
                        <% if (locals.comment) { %>
                            <div class="container">
                                <h5><%=comment.createdBy.fullname%></h5> 
                                <img src="<%- comment.createdBy.profileImageURL %>" width="50px" class="img-fluid" alt="Profile Image"> 
                                <h6><%- comment.content %></h6>
                            </div>
                        <% } %>
                        
                        
                        
                        
                    </div>
                <% }); %>
            </div>
        <% } %>
        

        <%-include('script') %>

    </body>

</html>